<div class="text-center">
  <h1>Contact Us</h1>
  <p class="lead">Rellena la siguiente informaci√≥n y te contactaremos.</p>

  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @message, url: submit_contact_path, local: true, class: "card p-4 shadow" do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :message, "Message", class: "form-label" %>
          <%= f.text_area :message, class: "form-control", rows: 4, required: true %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
